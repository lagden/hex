{
  "name": "lagden-hex",
  "version": "3.0.0",
  "description": "Encode and decode",
  "keywords": [
    "hex",
    "encode",
    "decode"
  ],
  "bug": {
    "url": "https://github.com/lagden/hex",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/index.js",
  "module": "index.js",
  "repository": "lagden/hex",
  "scripts": {
    "rm": "rm -rf dist",
    "rollup": "npm run rm && BABEL_ENV=rollup rollup -c",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "gzip": "find ./dist -name '*.js' -type f -exec sh -c 'gzip -c --best {} > {}.gz' \\;",
    "prebuild": "npm run rm",
    "build": "npm test && npm run rollup && npm run gzip"
  },
  "devDependencies": {
    "ava": "0.17.0",
    "coveralls": "2.11.15",
    "nyc": "10.0.0",
    "rollup": "0.41.4",
    "rollup-plugin-buble": "0.15.0",
    "xo": "0.17.1"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "index.js",
    "dist",
    "license",
    "README.md"
  ],
  "xo": {
    "envs": [
      "es6"
    ],
    "esnext": true,
    "semicolon": false
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  }
}
