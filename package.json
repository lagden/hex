{
  "name": "lagden-hex",
  "version": "3.0.1",
  "description": "Encode and decode",
  "keywords": [
    "hex",
    "encode",
    "decode"
  ],
  "bug": {
    "url": "https://github.com/lagden/hex",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/index.js",
  "repository": "lagden/hex",
  "scripts": {
    "rollup": "BABEL_ENV=rollup rollup -c",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "prebuild": "npm test",
    "build": "npm run rollup",
    "start": "npm run build"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "dist",
    "license",
    "README.md"
  ],
  "xo": {
    "envs": [
      "es6"
    ],
    "esnext": true,
    "semicolon": false
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "devDependencies": {
    "ava": "0.24.0",
    "babel-preset-es2015": "6.24.1",
    "coveralls": "3.0.0",
    "nyc": "11.3.0",
    "rollup": "0.52.1",
    "rollup-plugin-buble": "0.18.0",
    "xo": "0.18.2"
  }
}
